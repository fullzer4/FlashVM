FROM python:3.12-alpine

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

RUN apk add --no-cache \
    ca-certificates \
    tzdata

WORKDIR /app

RUN adduser -D -s /bin/sh appuser && \
    mkdir -p /home/appuser && \
    chown -R appuser:appuser /home/appuser /app

USER appuser

CMD ["python3"]